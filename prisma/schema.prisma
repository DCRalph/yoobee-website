model Account {
  id    String  @id @unique @default(uuid())
  session Session? 
  email String  @unique
  password String
  name  String
  cart Json 
}

model Session {
  id    String  @id @unique @default(uuid())
  account Account? @relation(fields: [accountId], references: [id])
  accountId String? @unique 
  token String @unique
  ip    String 
  cart Json
}

model Food {
  id        String   @id @unique @default(uuid())
  name      String
  description String
  price     Float
  image     String?
  category  Json 
}